<div class="media">
  <div class="media-body">
    <h4 class="media-heading">
      <%= category.body %>
      <%= link_to "Edit", edit_category_path(category), class: 'btn btn-success' %>
      <%= link_to "Delete", category, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this topic?' } %> 
      <br/>
    </h4>
    <small>
      <%= category.user.name %><br/>
      <%= category.created_at %>
    </small>
  </div>
</div>