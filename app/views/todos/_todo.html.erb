<%= content_tag :tbody, class: 'tbody', id: "todo-#{todo.id}" do %>
  <tr>

      <td><%= todo.body %></td>
      <td><%= todo.days_left %></td>
      <td><input id="todo_<%=todo.id %>" name="todos[]" value="<%=todo.id %>"  type= "checkbox"  /></td>
      <td><%= link_to "Delete", "#", remote: true, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this todo item?', delete_button: true, todo_id: todo.id, user_id: current_user.id, user_token: current_user.auth_token} %></td>
 
  </tr>
<% end %>
