<%= form_for todo, remote: true do |f| %>

  <div class="form-group">
    <%= f.label :body, 'Todo Item' %>
    <%= f.text_area :body, rows: 4, class: 'form-control', placeholder: "Enter todo item" %>
  </div>

  <div class="form-group">
    <%= f.submit "Create", class: 'btn btn-success' %>
  </div>
  
<% end %>