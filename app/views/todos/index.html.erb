<div class="row">
  <div class ="col-md-2">
  </div>
  <div class="col-md-8 center">
  <h1>OpenSuperlist - Todo!</h1><br/>
  <%= form_tag destroy_multiple_todos_path, method: :delete do %>
  <table class="table js-todos table-striped">
    <thead>
      <tr>
        <th>Todo list</th>
        <th>Days left</th>
        <th>Completed</th>
        <th>Action</th>
      </tr>
    </thead>
    
      <%= render partial: 'todos/todo', collection: @todos %>
    
  </table>
  <%= submit_tag "Delete completed" %>
  <% end %>
    
    
    <br/>
    <div class='new-todo'>
      <%= render partial: 'todos/form' %>
    </div>
  </div>

  <div class ="col-md-2">
  </div>

</div>